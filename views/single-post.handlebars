<div class="post">
    <h2>{{post.title}}</h2>
    <p>By {{post.user.username}} on {{post.created_at}}</p>
    <p>{{post.content}}</p>
    <hr>
    <h3>Comments:</h3>
    {{#if comments.length}}
        {{#each comments}}
            {{> post-comment this}}
        {{/each}}
    {{else}}
        <p>No comments yet.</p>
    {{/if}}
</div>
