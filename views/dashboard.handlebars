<div class="container mt-5">
  <h1 class="display-4 text-center">Welcome, {{user.username}}!</h1>
  <h2 class="mt-5">Your Dashboard</h2>
  <div class="row mt-3">
    <div class="col-md-6">
      <h3>Your Posts:</h3>
      {{#if user.posts.length}}
        {{#each user.posts}}
          {{> post-card this}}
        {{/each}}
      {{else}}
        <p>No posts yet.</p>
      {{/if}}
    </div>
    <div class="col-md-6">
      <h3>Create a New Post</h3>
      <form id="new-post-form" class="form">
        <div class="form-group">
          <input type="text" id="post-title" class="form-control" placeholder="Post Title" required>
        </div>
        <div class="form-group">
          <textarea id="post-content" class="form-control" placeholder="Post Content" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Create Post</button>
      </form>
    </div>
  </div>
</div>
